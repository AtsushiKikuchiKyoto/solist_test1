<div class="login-header">
    <div class="header-center">
        <h1 class="logo">Solist</h1>
    </div>
</div>

<main>
  <section class="user-signup" id="devise">
    <h2>新規登録画面</h2>
    <p><%= link_to '登録済みの方はこちら', new_user_session_path %></p>

    <%# 新規登録時のエラーメッセージ  %>
    <div>
      <% if resource.errors.any? %>
          <ul>
            <% resource.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
      <% end %>
    </div>

    <%= form_with model: @user, url: user_registration_path, class: "user-form", local: true do |f| %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "user-form-field", id: "email" %>
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "user-form-field", id: "password" %>
      <%= f.password_field :password_confirmation, autocomplete: "current-password", placeholder: "パスワード確認", class: "user-form-field", id: "password_confirmation" %>
      <%= f.submit "新規登録",class: "user-form-submit", id: "submit" %>
    <% end %>
  </section>
</main>

