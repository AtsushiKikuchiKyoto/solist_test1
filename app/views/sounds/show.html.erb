<body>
    <header>
        <%# -------ヘッダー部分------- %>
        <%= render partial: "profiles/header", locals: { profile: @profile } %>
    </header>

    <nav id="dropdownMenu" class="dropdown-menu">
      <ul>
        <%# -------メニュー部分------- %>
        <%= render partial: "profiles/menu", locals: { profile: @profile, profiles: @profiles } %>
      </ul>
    </nav>

    <main>
        <%# -------プロフィール部分------- %>
        <%= render partial: "profiles/profile", locals: { sound: @sound } %>

        <%# -------サウンド部分------- %>
        <%= render partial: "sounds/soundBox", locals: { profile: @profile, sounds: @sound.profile.sounds } %>
    </main>
</body>
