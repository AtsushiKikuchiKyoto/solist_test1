
<%= form_with model: @profile, local: true do |f| %>
  <p>画像ファイル(2MB未満)</p>
  <%= f.file_field :image, accept: "image/jpg,image/jpeg,image/gif,image/png", class: "profile-form-file", id: "image" %>
  <%= image_tag "avatar.jpg",class: "preview", id:"preview" %>

<%# --------エラーメッセージ--------- %>
<%= render 'layouts/error', model: f.object %>

  <p>名前(必須)</p>
  <%= f.text_field :name, class: "profile-form-name", id: "name" %>
  <p>紹介文(必須)</p>
  <%= f.text_field :text, class: "profile-form-text", id: "text" %>
  <%= f.submit "OK", class: "profile-form-submit", id: "submit" %>
<% end %>