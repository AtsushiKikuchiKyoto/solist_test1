<body>
    <header>
        <%# -------ヘッダー部分------- %>
        <%= render partial: "header", locals: { current_profile: @current_profile } %>

        <nav id="dropdownAvatar" class="dropdown-avatar">
          <ul>
            <%# -------アバター部分------- %>
            <%= render partial: "avatar", locals: { current_profile: @current_profile, profiles: @profiles } %>
          </ul>
        </nav>

        <nav id="dropdownMenu" class="dropdown-menu">
          <ul>
            <%# -------メニュー部分------- %>
            <%= render partial: "menu", locals: { current_profile: @current_profile, profiles: @profiles } %>
          </ul>
        </nav>
    </header>


    <main>
        <%# -------サウンド部分------- %>
        <%= render partial: "sounds/soundBox", locals: { current_profile: @current_profile, sounds: @sounds } %>
    </main>
</body>