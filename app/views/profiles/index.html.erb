<body>
    <header>
        <div class="header-left">
            <%= image_tag "avatar.jpg",class: "avatar" %>
        </div>
        <div class="header-center">
            <h1 class="logo">Solist</h1>
        </div>
        <div class="header-right">
            <%= image_tag "menu.png", class: "menu-icon", id: "menu-icon" %>
        </div>
    </header>

    <nav id="dropdownMenu" class="dropdown-menu">
        <ul>
            <li><%= link_to "新規プロフィール作成", new_profile_path %></li>
            <li><a href="#profile">ダミーダミー</a></li>
            <li><a href="#settings">ダミーダミー</a></li>
            <li><%= link_to "ログアウト", destroy_user_session_path, data: {turbo_method: :delete}%></li>
        </ul>
    </nav>

    <main>
<%# -------サウンド部分------- %>
      <div class="sounds-box">
        <% @sounds.each do |sound| %>
          <div class="sound-each">
            <div class="sound-top">
              <%= image_tag sound.profile.image.variant(resize: '100x100'), class: "sound-profile" %>
              <textarea rows="3" class="sound-text"><%= sound.text %></textarea>
            </div>
            <%= audio_tag url_for(sound.sound), controls: true, class: "audio" %>
          </div>
        <% end %>
      </div>

    </main>
</body>

