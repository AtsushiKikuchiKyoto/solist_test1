<div class="header-left", id="avatar-icon">
  <% if profile and profile.id%>
    <%= image_tag profile.image,class: "avatar",id: "avatar-icon" %>
    <div class="avatar-name"><%= profile.name %></div>
  <% else %>
    <%= image_tag "avatar.jpg",class: "avatar",id: "avatar-icon" %>
  <% end %>
</div>
<%= link_to(root_path, class: 'header-center') do %>
    <h1 class="logo">Solist</h1>
<% end %>
<div class="header-right">
    <%= image_tag "menu.png", class: "menu-icon", id: "menu-icon" %>
</div>